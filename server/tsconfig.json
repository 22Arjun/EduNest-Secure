{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  },
  "include": [
    "src/**/*"
  ]
}